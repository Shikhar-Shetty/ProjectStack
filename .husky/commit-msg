
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # Reset

echo "${YELLOW}âœ… commit-msg hook triggered"
echo "ðŸ“¦ Running commitlint...${NC}"

set +e

npx --no -- commitlint --edit "$1"
RESULT=$?

set -e

if [ $RESULT -ne 0 ]; then
  echo ""
  echo "${RED}â›” Your commit message must follow Conventional Commit format!${NC}"
  echo ""
  echo "${YELLOW}ðŸ“Œ Format: <type>(optional-scope): <short summary>${NC}"
  echo ""
  echo "ðŸ”§Common Types:${NC}"
  echo "${GREEN}  feat:      A new feature"
  echo "  fix:       A bug fix"
  echo "  docs:      Documentation changes"
  echo "  refactor:  Code restructure without behavior change"
  echo "  chore:     Maintenance tasks (build, deps, config, tooling)${NC}"
  echo ""
  echo "${YELLOW}ðŸ§­ Examples:${NC}"
  echo "  feat(auth): enable OAuth login support"
  echo "  fix(login): resolve empty password crash"
  echo "  docs(readme): update installation instructions"
  echo ""
  exit 1
fi

echo "${GREEN}âœ… Commit message is valid!${NC}"
exit 0
